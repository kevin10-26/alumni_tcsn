<!-- Modal Background -->
<div id="manage-promotion-modal" class="fixed inset-0 bg-black/40 bg-opacity-50 z-50">
    <!-- Modal Container -->
    <div class="flex justify-center items-center w-full h-screen">

        <div class="bg-white w-full max-w-2xl rounded-2xl shadow-xl p-6">

            <!-- Header -->
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold text-gray-900">
                    Gérer la promotion {{ promotion.name }}
                </h2>
                <div id="close-manage-promotion-modal" class="float-right text-3xl text-red-800 hover:cursor-pointer">
                    &times;
                </div>
            </div>

            <!-- FORM UPDATE -->
            <form id="promoUpdateForm" class="space-y-4" onsubmit="submitPromotion(event, '{{ (promotion.id > 0) ? 'edit' : 'create' }}');">

                {% if promotion.id > 0 %}
                <input type="hidden" name="promId" value="{{ promotion.id }}" />
                {% endif %}

                <div id="manage-prom-error" class="text-red-800 my-4"></div>

                <!-- Promo Name -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Nom de la promo</label>
                    <input 
                        id="promoName" 
                        name="name"
                        type="text"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500"
                        value="{{ promotion.name }}"
                    >
                </div>

                <!-- Promo Year -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Année</label>
                    <input 
                        id="promoYear" 
                        name="year"
                        type="number"
                        min="2014"
                        max="2100"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500"
                        value="{{ promotion.year }}"
                    >
                </div>

                <!-- STUDENTS LIST -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Étudiants</label>

                    <ul id="prom-students-list" class="space-y-2 pl-4 list-disc max-h-48 overflow-y-auto border rounded-xl p-3 bg-gray-50">
                        {% for user in promotion.students %}
                        <li>
                            <span>{{ user.userName }}</span>
                            <span>&nbsp;-&nbsp;</span>
                            <span class="text-blue-600 underline hover:cursor-pointer" onclick="event.target.parentElement.remove();">Supprimer</span>
                        </li>
                        {% endfor %}
                    </ul>
                </div>

                <!-- ADD STUDENT -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Ajouter un étudiant</label>

                    <div class="flex gap-2">
                        <input 
                            id="studentSearch"
                            type="search"
                            list="matching-students-list"
                            placeholder="Rechercher un étudiant..."
                            class="w-full px-3 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500"
                            onkeyup="searchStudents(event, '{{ promotion.id }}', 'matching-students-list')"
                        >
                        <datalist id="matching-students-list">
                            {% for user in students %}
                            <option value="{{ user.userName }}">{{ user.userName }}</option>
                            {% endfor %}
                        </datalist>
                        <button 
                            type="button"
                            onclick="addStudent('studentSearch', 'prom-students-list')"
                            class="px-4 py-2 bg-blue-600 text-white rounded-xl hover:bg-blue-700"
                        >
                            Ajouter
                        </button>
                    </div>

                    <!-- Résultats -->
                    <ul id="studentSearchResults" class="mt-2 space-y-2"></ul>

                </div>


                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Délégués</label>

                    <ul id="prom-delegates-list" class="space-y-2 pl-4 list-disc max-h-48 overflow-y-auto border rounded-xl p-3 bg-gray-50">
                        {% for user in attachedDelegates %}
                        <li>
                            <span>{{ user.userName }}</span>
                            <span>&nbsp;-&nbsp;</span>
                            <span class="text-blue-600 underline hover:cursor-pointer" onclick="event.target.parentElement.remove();">Supprimer</span>
                        </li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="my-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Ajouter un délégué</label>

                    <div class="flex gap-2">
                        <input 
                            id="delegateSearch"
                            type="search"
                            list="matching-delegates-list"
                            placeholder="Rechercher un étudiant..."
                            class="w-full px-3 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500"
                            onkeyup="searchStudents(event, '{{ promotion.id }}', 'matching-delegates-list')"
                        >
                        <datalist id="matching-delegates-list">
                            {% for user in attachedDelegates %}
                            <option value="{{ user.userName }}">{{ user.userName }}</option>
                            {% endfor %}
                        </datalist>
                        <button 
                            type="button"
                            onclick="addStudent('delegateSearch', 'prom-delegates-list')"
                            class="px-4 py-2 bg-blue-600 text-white rounded-xl hover:bg-blue-700"
                        >
                            Ajouter
                        </button>
                    </div>
                </div>

                <!-- SUBMIT -->
                <button
                    type="submit"
                    class="w-full bg-green-600 text-white py-2 rounded-xl hover:bg-green-700"
                >
                    Enregistrer les modifications
                </button>
            </form>

        </div>
    </div>
</div>